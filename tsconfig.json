
{
  "compilerOptions": {
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "ES2015",
    "skipLibCheck": true,
    "lib": ["dom", "es2017"],
    "resolveJsonModule": true,
    "rootDir": "./components",
    "outDir": "es"
  },
  "include": ["components", "global.d.ts"],
  "exclude": ["node_modules", "lib", "es", "example"]
}